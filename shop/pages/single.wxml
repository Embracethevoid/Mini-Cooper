<!--商品详情-->
<swiper
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    style="width:100%;height:{{imageHeight}}px"
>
  <block wx:for="{{showcase}}" wx:key="">
    <swiper-item>
        <image
            src="{{item}}"
            model="aspectFit"
            style="width:100%;height:{{imageHeight}}px"
            bindload="imageLoad"
        />
    </swiper-item>
  </block>
</swiper>
<view class="goods-main">
    <view class="name">{{name}}</view>
    <view class="desc">{{desc}}</view>
    <view class="price">¥{{price}} <b class="o">¥{{origin_price}}</b></view>
</view>
<view class="goods-desc">
    <view wx:for="{{list}}" wx:key="{{index}}">
        <image
            src="{{item}}"
            style="width:{{images[index].width}}rpx;height:{{images[index].height}}rpx;"
            bindload="listLoad"
            data-id="{{index}}"
        />
    </view>
</view>
<view class="goods-buy">
    <view style="float:left;" class="f" bindtap="goCart">
        <image
            src="../static/img/cart_01.png"
            style="width:40px;height:40px;padding:5px 0;"
        />
        <view wx:if="{{cart_number > 0}}" class="number">{{cart_number}}</view>
    </view>
    <view style="float:left;" class="s" bindtap="addCart">加入购物车</view>
    <view style="float:left;" class="t" bindtap="buy">立即购买</view>
</view>
