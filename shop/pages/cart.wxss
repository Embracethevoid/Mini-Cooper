/* pages/cart.wxss */
page{
    background-color: #ebebeb;
}
.empty{
    margin-top: 50px;
}
.empty > .img{
    width: 80px;
    margin: 0 auto;
}
.empty > .text{
    width: 100%;
    margin: 0 auto;
    text-align: center;
    padding-top: 10px;
}
.empty > view > .btn{
    background-color: #ff6801;
    color: #ffffff;
    margin-top: 10px;
    width: 80%;
}
.list{
    margin-top: 10px;
    margin-bottom: 50px;
}
.list > .item{
    width: 100%;
    height: 40px;
    background-color: #ffffff;
    border-bottom: 1px solid #ebebeb;
    padding: 20px;
}
.list > .item > .img{
    margin-left: 5px;
}
.list > .item > .name{
    margin-left: 5px;
}
.list > .item > .price{
    color: #989898;
    margin-left: 20px;
}
.list > .item > .price > span{
    color: #ff6600;
}
.buy{
    width: 100%;
    height: 50px;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
}