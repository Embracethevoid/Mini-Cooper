<!--购物车-->
<view class="empty" wx-if="{{app.cartNum < 1}}">
    <view class="img">
        <image src="../static/img/cart-empty.png" style="width:80px;height:80px;" />
    </view>
    <view class="text">购物车还是空的</view>
    <view>
        <button class="btn" bindtap="goMall">到商城逛逛</button>
    </view>
</view>
<view class="list" wx-if="{{app.cartNum >= 1}}">
    <view wx:for="{{app.cartList}}" wx:key=""  class="item">
        <view style="float:left" class="radio">
            <radio value="" checked="" />
        </view>
        <view style="float:left" class="img">
            <image src="{{item.img}}" style="width:40px;height:40px;" />
        </view>
        <view style="float:left" class="name">{{item.name}}</view>
        <view style="float:left" class="price"><span>¥{{item.price}}</span> x {{item.number}}</view>
    </view>
</view>
<view class="buy"  wx-if="{{app.cartNum >= 1}}">
    <view style="float:left">
        <radio value="" checked="" />
    </view>
    <view style="float:left">合计：¥0</view>
    <view style="float:left">结算（0）</view>
</view>
